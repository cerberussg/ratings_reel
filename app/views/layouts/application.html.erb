<!DOCTYPE html>
<html>
  <head>
    <title>RatingsReel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <%= link_to "Reel Reviews", root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <% if user_signed_in? %>
              <%= link_to 'Add Movie', new_movie_path, class: 'nav-item nav-link' %>
            <% end %>
          </div>
          <div class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <%= link_to "Sign Out", destroy_user_session_path,
                  method: :delete, class: 'nav-item nav-link' %>
            <% else %>
              <%= link_to "Sign Up", new_user_registration_path, class: 'nav-item nav-link' %>
              <%= link_to "Login", new_user_session_path, class: 'nav-item nav-link' %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
