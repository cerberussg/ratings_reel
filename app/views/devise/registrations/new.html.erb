<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :email, placeholder: 'Enter email', required: true, autofocus: true, class: 'form-control' %>
    <%= f.input :password, placeholder: 'Password', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: 'form-control' %>
    <%= f.input :password_confirmation, placeholder: 'Retype Password', required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.button :button, "Sign up", class: 'btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
